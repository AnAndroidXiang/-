<resources>

    <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.launcher">
        <item name="android:windowBackground">@drawable/bg_app</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.AppBarLayoutTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.Light">

        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Detail.statusbarTheme" parent="AppTheme">

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Detail.AppTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:toolbarStyle">@style/Detail.ToolbarTheme</item>
    </style>

    <style name="Detail.ToolbarTheme" parent="Theme.AppCompat.Light">

        <item name="titleTextColor">@color/text_color</item>
    </style>

    <style name="popup_theme" parent="Theme.Design.Light">
        
        <item name="android:colorBackground">@color/text_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.TabLayoutTheme" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">@dimen/dp_120</item>
        <item name="tabTextAppearance">@style/TabLayoutTheme.tabTextAppearance</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="tabSelectedTextColor">@color/text_color</item>
    </style>

    <style name="TabLayoutTheme.tabTextAppearance" parent="Widget.Design.TabLayout">

        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/no_select_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Detail.ExpandedToolbar" parent="@android:style/TextAppearance.Medium">

        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AboutTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.SetTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>
